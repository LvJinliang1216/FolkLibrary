@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
@using FolkLibrary.DataTransferObject;
@model LeaveWordView
<div style="width:100%">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-4" style="height:600px">
                <img src="~/Images/QQ截图20170327000551.png" />
            </div>
            <div class="col-xs-6 col-sm-8 " style="height:600px">
                <div class="panel panel-default">
                    <div class="panel-heading" style="background-color:#337ab7;color:#ffffff;"><span style="font-size:18px;">给我留言</span></div>
                    <div class="panel-body">
                        @using (Html.BeginForm("SaveMessage", "Massage", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">留言标题:</span>
                                    @Html.TextBoxFor(x => x.LeaveWordTitle, new { @class = "form-control", @placeholder = "请输入标题" })
                                </div>
                                <div class="fill-top-space"></div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">留言内容:</span>
                                    @Html.TextAreaFor(x => x.LeaveWordContent, new { @class = "form-control", @style = "height:200px; resize:none;", @placeholder = "请输入内容" })
                                </div>
                                <div class="fill-top-space"></div>
                                <div class="input-group input-group-sm" style="width: 50%;">
                                    <span class="input-group-addon">联系邮箱:</span>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "请输入邮箱地址" })
                                </div>
                                <div class="fill-top-space"></div>
                                <div class="input-group input-group-sm" style="width: 50%;">
                                    <span class="input-group-addon">验&nbsp;&nbsp;证&nbsp;&nbsp;码:</span>
                                    <img id="validateCode" src="@Url.Action("ValidateCode", "FolkLibraryUtil")?t=@DateTime.Now.Ticks" title="看不清，点击换一张" />
                                    @Html.TextBoxFor(x => x.LeaveWordTitle, new { @class = "form-control", @placeholder = "请输入验证码" })
                                </div>
                                <div class="fill-top-space"></div>
                                <div class="input-group input-group-sm" style="width: 100%;">
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-6"></div>
                                        <div class="col-xs-6 col-sm-6">
                                            <div class="btn-group btn-group-justified">
                                                <div class="btn-group">
                                                    <button type="submit" class="btn btn-info">提交</button>
                                                </div>
                                                <div class="btn-group">
                                                    <button type="reset" class="btn btn-danger">重置</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#validateCode").click(function () {
            var newSrc = "@Url.Action("ValidateCode", "FolkLibraryUtil")" + "?t=" + (new Date()).getTime();
            this.src = newSrc;
            return false;
        });
    });

</script>